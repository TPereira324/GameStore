<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.GameStore">

        <!-- Login Activity como LAUNCHER (primeira tela) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.GameStore">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="Criar Conta"
            android:theme="@style/Theme.GameStore" />

        <!-- Main Activity (agora não é mais a LAUNCHER) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="Loja de Jogos"
            android:theme="@style/Theme.GameStore" />

        <!-- Game Detail Activity -->
        <activity
            android:name=".GameDetailActivity"
            android:exported="false"
            android:label="Detalhes do Jogo"
            android:theme="@style/Theme.GameStore" />

    </application>

</manifest>